<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="150.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.ControllerAddOS">
   <children>
      <HBox fx:id="titleHBox" layoutX="30.0" layoutY="30.0" prefHeight="30.0" prefWidth="650.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="30.0" prefWidth="703.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label fx:id="title" prefHeight="30.0" prefWidth="246.0" text="  Nuovo orario settimanale">
                     <font>
                        <Font name="System Italic" size="14.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="TOP_RIGHT" prefHeight="30.0" prefWidth="120.0" HBox.hgrow="ALWAYS">
               <children>
                  <JFXButton id="titleClose" fx:id="titleCloseButton" prefHeight="30.0" prefWidth="60.0" text="">
                     <graphic>
                        <ImageView fx:id="titleCloseImage" fitHeight="20.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../images/titleClose.png" />
                           </image>
                           <viewport>
                              <Rectangle2D />
                           </viewport>
                        </ImageView>
                     </graphic>
                  </JFXButton>
               </children>
            </HBox>
         </children>
      </HBox>
      <JFXTextField fx:id="nomeField" labelFloat="true" layoutX="40.0" layoutY="40.0" promptText="Nome orario settimanale" AnchorPane.leftAnchor="40.0" AnchorPane.rightAnchor="40.0" />
      <HBox alignment="CENTER" layoutX="14.0" layoutY="100.0" prefHeight="53.0" prefWidth="300.0" spacing="15.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <JFXButton onMouseClicked="#apply" prefHeight="30.0" prefWidth="80.0" text="Ok" />
            <JFXButton onMouseClicked="#cancel" prefHeight="30.0" prefWidth="80.0" text="Cancel" />
         </children>
      </HBox>
      <Label fx:id="msgLbl" layoutX="40.0" layoutY="75.0" prefHeight="30.0" prefWidth="195.0" textFill="#f80000" />
   </children>
</AnchorPane>
