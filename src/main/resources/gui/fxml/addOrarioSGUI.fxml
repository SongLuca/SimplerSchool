         <children>
            <JFXButton onMouseClicked="#apply" prefHeight="30.0" prefWidth="80.0" text="Ok" />
            <JFXButton onMouseClicked="#cancel" prefHeight="30.0" prefWidth="80.0" text="Cancel" />
         </children>
      </HBox>
      <Label fx:id="msgLbl" layoutX="40.0" layoutY="75.0" prefHeight="30.0" prefWidth="195.0" textFill="#f80000" />
