<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXSpinner?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.ControllerFileView">
   <children>
      <AnchorPane fx:id="anchorPane" prefHeight="400.0" prefWidth="400.0">
         <children>
            <HBox fx:id="titleHBox" layoutX="20.0" layoutY="20.0" prefHeight="30.0" prefWidth="650.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Label fx:id="title" prefHeight="30.0" prefWidth="600.0" text="File list">
                     <font>
                        <Font name="System Italic" size="16.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="40.0">
               <children>
                  <JFXListView fx:id="fileListView" prefHeight="350.0" prefWidth="360.0" />
                  <HBox alignment="CENTER_LEFT" prefHeight="44.0" prefWidth="360.0">
                     <children>
                        <Label fx:id="hintLbl" prefHeight="15.0" prefWidth="297.0" text="*Double click to open the file" />
                        <JFXButton fx:id="closeBtn" onMouseClicked="#close" prefHeight="40.0" prefWidth="60.0" text="Close" />
                     </children>
                     <padding>
                        <Insets top="10.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
      </AnchorPane>
      <StackPane fx:id="stackPane" prefHeight="600.0" prefWidth="600.0" visible="false" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
      <JFXSpinner fx:id="loading" layoutX="160.0" layoutY="160.0" prefHeight="80.0" prefWidth="80.0" visible="false" />
   </children>
</AnchorPane>
